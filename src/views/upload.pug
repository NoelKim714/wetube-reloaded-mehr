extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data", action="/videos/upload")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="Title", required, type="text", name="title", minlength=3, maxlength=50)
        input(placeholder="Description", required, type="text", name="description", maxlength=100) 
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags") 
        input(type="submit", value="Upload Video")